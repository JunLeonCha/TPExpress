<div class="d-flex w-75 m-auto px-5 text-white flex-wrap justify-content-center" style="background-color:rgba(0, 0, 0, 0.708)">
    <% for(var i=0; i<items.length; i++) {%>
      <div class="d-flex col-md-4 flex-column align-items-center">
        <img class="w-50" src=<%= items[i].image %> alt="Image">
            <div class="d-flex flex-column align-items-center">
              <div class="font-bold text-xl mb-2"><p><%= items[i].name %></p></div>
              <p class="text-gray-700 text-base">
                <%= items[i].description %>
              </p>
            </div>
          </div>
    <% } %>
</div>